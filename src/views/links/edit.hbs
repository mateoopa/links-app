<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="tittle" placeholder="Tittle" autofocus value="{{link.tittle}}">
                        </div> <br>
                        <div class="form-group">
                            <input type="url" class="form-control" name="url" placeholder="URL" value="{{link.url}}">
                        </div> <br>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control" placeholder="Description">{{link.description}}</textarea> 
                        </div> <br>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>